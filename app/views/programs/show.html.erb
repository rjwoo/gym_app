<div>
  <h1><%= @program.program_name %></h1>
  <p><%= link_to "Edit", edit_program_path(@program) %> |
     <%= link_to "Delete", @program, method: :delete, data: {confirm: "Are you sure?"} %></p>
  <hr>
</div>

<h2>Add Workout</h2>

<%= render "days/form" %>

<div>
  <% @program.days.each do |day| %>
    <p><%= link_to day.day_number, program_day_path(@program, day) %></p>
    <hr>
  <% end %>
</div>
